# PostgreSQL (local dev placeholders; do not use real secrets in this file)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-local
POSTGRES_DB=nba_matchups
POSTGRES_PORT=5433
DATABASE_URL=postgresql://postgres:change-me-local@localhost:5433/nba_matchups

# Optional: fallback SQLite path if DATABASE_URL is not set
# MATCHUP_DB_PATH=backend/.data/matchup_snapshots.db

# Optional: Cloudbet sports MCP bridge endpoint for game totals/spreads
# SPORTS_MCP_URL=http://localhost:8080/mcp
# SPORTS_MCP_COMPETITION=NBA
# SPORTS_MCP_COMPETITIONS=NBA,National Basketball Association,Basketball
# SPORTS_MCP_TIMEOUT_SECONDS=8
# SPORTS_MCP_LIMIT=50

# Optional: The Odds API (used as primary game-lines provider when configured)
# THE_ODDS_API_KEY=replace_me
# THE_ODDS_SPORT=basketball_nba
# THE_ODDS_REGIONS=us
# THE_ODDS_MARKETS=spreads,totals
# THE_ODDS_FORMAT=american
# THE_ODDS_DATE_FORMAT=iso
# THE_ODDS_TIMEOUT_SECONDS=8

# Optional: injury fallback provider if NBA CDN is empty/unavailable.
# Supports placeholders: {date} (YYYY-MM-DD), {date_token} (YYYYMMDD)
# INJURY_FALLBACK_URL=https://provider.example.com/nba/injuries?date={date}
# INJURY_FALLBACK_API_KEY=replace_me
# INJURY_FALLBACK_API_KEY_HEADER=x-api-key

# Optional: NBA slate fetch timeout/retry tuning (seconds)
# NBA_SCOREBOARD_TIMEOUT_SECONDS=15
# NBA_SCOREBOARD_RETRIES=4
# NBA_FALLBACK_TIMEOUT_SECONDS=12

# Optional: warm today's season/last10 snapshots at app startup (cache cold only)
# PREWARM_TODAY_ON_STARTUP=true
